<h1>Games</h1>

<table class='table'>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td>current player: <%= game.current_player&.name || 'No current player assigned' %></td>
        <td>
          <% if game.current_player %>
            <button type='button' class='btn btn-primary'>
              <%= link_to 'Play', play_game_path(game) %></td>
            </button>
          <% end %>
        <% if active_words_count(game) > 0 %>
          <td>
              <%= active_words_count(game) %> words available.</td>
        <% else %>
          <td>Assign words first </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
