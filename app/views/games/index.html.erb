<h1>Games</h1>

<table class='table'>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <% if game.current_player %>
          <td>current player: <%= game.current_player.name %></td>
          <td>total players: <%= game.players.count %></td>
        <% else %>
          <td>Game has no players yet</td>
          <td/>
        <% end %>

        <% if game.word_selections.count > 0 %>
          <td><%= link_to 'Play', play_game_path(game) %></td>
        <% else %>
          <td>Assign words first </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
